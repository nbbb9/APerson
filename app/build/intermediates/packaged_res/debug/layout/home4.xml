<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home4Activity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="Instagram"
        android:textColor="@color/black"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/mylikebtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="25dp"
        android:background="@color/white"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/heart"
        app:layout_constraintEnd_toStartOf="@+id/dmbtn4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/dmbtn4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@color/white"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_marginTop="90dp"
        android:orientation="horizontal"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/storybtn1"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/circlebtn" />

            <Button
                android:id="@+id/storybtn2"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/circlebtn" />

            <Button
                android:id="@+id/storybtn3"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/circlebtn"/>

            <Button
                android:id="@+id/storybtn4"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/circlebtn" />

            <Button
                android:id="@+id/storybtn5"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/circlebtn" />

        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#AAAAAA"
        app:layout_constraintBottom_toTopOf="@+id/mainscrollview"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <ScrollView
        android:id="@+id/mainscrollview"
        android:layout_width="410dp"
        android:layout_height="491dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/han_post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/han_profile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/circlebtn"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/han_ps" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="\n  se._.hee\n#할로윈#Halloween#파티"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="400dp"
                        android:layout_height="400dp"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/han_zom_pic" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="match_parent" />

                    <ImageButton
                        android:id="@+id/han_like"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="left"
                        android:background="@color/white"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/heart" />

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="match_parent" />

                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="left"
                        android:background="@color/white"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/message" />

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="match_parent" />

                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="left"
                        android:background="@color/white"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/send" />

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent" />

                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="left"
                        android:background="@color/white"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/bookmark" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="        좋아요 17,569개"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      >>할로윈 파티 미쳐따아아♥\n"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#AAAAAA"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




    <!-- 공통부분  -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/home" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/find" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/plus" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/video" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/user" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>